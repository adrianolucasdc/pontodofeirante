generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Loja {
  id          String      @id 
  nome        String
  razao       String
  cnpj        String       @unique
  senha       String
  email       String       @unique
  telefone    String       @unique
  celular     String       @unique
  banner      String?         // img
  logo        String?         // img
  termos      Boolean
  produtos    Produto[]   
  localizacao LocalizacaoLoja[]
}

model LocalizacaoLoja {
  id           String      @id 
  loja         Loja        @relation(fields: [lojaId], references: [id])
  lojaId       String
  cep          String
  logradouro   String
  numero       String
  bairro       String
  complemento  String
}

model Produto {
  id           String               @id 
  loja         Loja                 @relation(fields: [lojaID], references: [id])
  lojaID       String
  nomeProduto  String               @unique
  categoria    String
  imagem       String   // img
  descricao    String
  descontoTodos Int?
  cores        CorProduto[]
}

model CorProduto {
  id          String      @id
  produto     Produto     @relation(fields: [produtoId], references: [id])
  produtoId   String
  nomeCor     String      @unique
  tamanhos    TamanhoProduto[]
}

model TamanhoProduto{
  id          String     @id
  cor         CorProduto @relation(fields: [corId], references: [id])
  corId       String
  nomeTamanho String     @unique
  detalhesProduto DetalhesProduto[]
}

model DetalhesProduto{
  id          String    @id
  tamanho     TamanhoProduto   @relation(fields: [tamanhoId],references: [id])
  tamanhoId   String    @unique
  preco       Float
  qtd         Int
}

model Usuario {
  id           String      @id 
  nome         String
  email        String   @unique
  senha        String   
  telefone     String   @unique
  cpf          String   @unique
  dataNasc     DateTime
  sexo         String
  termos       Boolean
  endereco     EnderecoUsuario[]
  favoritos    FavoritosUsuario[]
  pedidos      PedidosUsuario[]
  sacola       SacolaUsuario[]
}

model EnderecoUsuario {
  id           String      @id 
  usuario      Usuario  @relation(fields: [id], references: [id])
  cep          String
  cidade       String
  uf           String
  rua          String 
  numero       String 
  bairro       String 
}


model FavoritosUsuario {
  id          String      @id 
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   String
}

model PedidosUsuario {
  id        String     @id
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   String
}

model SacolaUsuario {
  id        String     @id
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   String
}