generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Loja {
  id           String      @id 
  nome        String
  cnpj        Int          @unique
  email       String          @unique
  telefone    Int          @unique
  banner      String?         // img
  logo        String?         // img
  senha       String
  termos      Boolean
  localizacao LocalizacaoLoja[]
  favoritos   Favorito[]
  produtos    Produto[]       
}


model Categoria {
  id           String      @id 
  nome    String
  imagem  String  // img
  produtos Produto[]
}

model Produto {
  id           String      @id 
  loja         Loja      @relation(fields: [lojaId], references: [id])
  lojaId       String
  categoria    Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId  String
  nome         String
  imagem       String?   // img
  descricao    String
  preco        Float
  desconto     Int?
  favoritos    Favorito[]
}



model LocalizacaoLoja {
  id           String      @id 
  loja         Loja     @relation(fields: [lojaId], references: [id])
  lojaId       String
  cep          String
  logradouro   String
  numero       String
  bairro       String
  complemento  String
}

model Usuario {
  id           String      @id 
  nome         String
  email        String   @unique
  senha        String   
  telefone     String   @unique
  cpf          String   @unique
  dataNasc     DateTime
  sexo         String
  termos       Boolean
  endereco     EnderecoUsuario[] 
  favoritos    Favorito[]
}
model EnderecoUsuario {
  id           String      @id 
  usuario      Usuario  @relation(fields: [id], references: [id])
  cep          String
  cidade       String
  uf           String
  rua          String 
  numero       String 
  bairro       String 
}
model Favorito {
  id           String      @id 
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   String
  loja        Loja     @relation(fields: [lojaId], references: [id])
  lojaId      String
  produto     Produto  @relation(fields: [produtoId], references: [id])
  produtoId   String

  @@unique([usuarioId, lojaId, produtoId], name: "favoritos_unique")
}
