generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Loja {
  id          String      @id 
  nome        String
  razao       String
  cnpj        String       @unique
  senha       String
  email       String       @unique
  telefone    String       @unique
  celular     String       @unique
  banner      String?         // img
  logo        String?         // img
  termos      Boolean
  produtos    Produto[]   
  localizacao LocalizacaoLoja[]
}

model Produto {
  id           String      @id 
  loja         Loja        @relation(fields: [lojaId], references: [id])
  lojaId       String
  categoria    String
  categoriaId  String
  nome         String
  imagem       String?   // img
  descricao    String
  preco        Float
  desconto     Int?
}

model LocalizacaoLoja {
  id           String      @id 
  loja         Loja     @relation(fields: [lojaId], references: [id])
  lojaId       String
  cep          String
  logradouro   String
  numero       String
  bairro       String
  complemento  String
}

model Usuario {
  id           String      @id 
  nome         String
  email        String   @unique
  senha        String   
  telefone     String   @unique
  cpf          String   @unique
  dataNasc     DateTime
  sexo         String
  termos       Boolean
  endereco     EnderecoUsuario[]
  favoritos    FavoritosUsuario[]
  pedidos      PedidosUsuario[]
  sacola       SacolaUsuario[]
}

model EnderecoUsuario {
  id           String      @id 
  usuario      Usuario  @relation(fields: [id], references: [id])
  cep          String
  cidade       String
  uf           String
  rua          String 
  numero       String 
  bairro       String 
}


model FavoritosUsuario {
  id          String      @id 
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   String
}

model PedidosUsuario {
  id        String     @id
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   String
}

model SacolaUsuario {
  id        String     @id
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   String
}